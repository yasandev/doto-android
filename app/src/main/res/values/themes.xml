<resources xmlns:tools="http://schemas.android.com/tools">

    <!-- Base application theme. -->
    <style name="Theme.DoTo" parent="Theme.MaterialComponents.DayNight.NoActionBar">
        <!-- Primary brand color. -->
        <item name="colorPrimary">@color/theme_primary</item>
        <item name="colorPrimaryVariant">@color/theme_primary_dark</item>
        <item name="colorOnPrimary">@color/white</item>
        <!-- Secondary brand color. -->
        <item name="colorSecondary">@color/theme_accent</item>
        <item name="colorSecondaryVariant">@color/theme_accent_dark</item>
        <item name="colorOnSecondary">@color/black</item>
        <!-- Status bar color. -->
        <item name="android:statusBarColor" tools:targetApi="l">@color/layer_background</item>
        <item name="android:navigationBarColor" tools:targetApi="l">@color/layer_background</item>
        <!-- Customize your theme here. -->
    </style>

    <style name="Theme.DoTo.NoActionBar">
        <item name="windowActionBar">false</item>
        <item name="windowNoTitle">true</item>
    </style>

    <style name="Theme.DoTo.AppBarOverlay" parent="ThemeOverlay.AppCompat.Dark.ActionBar" />

    <style name="Theme.DoTo.PopupOverlay" parent="ThemeOverlay.AppCompat.Light" />

</resources>